{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "target": "es2018",
    "module": "commonjs",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "build"
  },
  "include": ["src"]
}
