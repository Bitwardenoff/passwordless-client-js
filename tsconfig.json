{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "esnext",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "rootDir": "src"
  },
  "include": ["**/*.ts"]
}
